@page "/counter"
@using CommunityToolkit.Maui.Storage
@using CommunityToolkit.Maui.Core.Services;
<h1>Counter</h1>

<p role="status">Pick Folder:</p>
<h1>@FolderName</h1>
<h1>@FolderPath</h1>
<button class="btn btn-primary" @onclick="PickFolder">Click me</button>

@code {

    private string FolderName { get; set; }
    private string FolderPath { get; set; }
    async void PickFolder()
    {
        var result = await FolderPicker.Default.PickAsync();
        if (result.IsSuccessful)
        {
            Console.WriteLine(result.Folder.Name);
            Console.WriteLine(result.Folder.Path);
            FolderName = result.Folder.Name; 
            FolderPath = result.Folder.Path; 
        }
        else
        {
            
        }
    }
}
