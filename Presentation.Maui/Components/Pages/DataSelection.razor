@namespace Presentation.Maui.Components.Pages
@inject NavigationManager Navigation
@using Presentation.Maui.Components.Shared
@using Presentation.Maui.DTO
@using Presentation.Maui.ValueObjects
@page "/DataSelection/{directoryInfo}"

<FileFilter />

<DataTableModel @bind-Type="typeof(TablePreviewDTO)" @bind-DataSource="_dataSource" />

@code{
    [Parameter]
    public string DirectoryInfo { get; set; }

    private List<object> _dataSource = new();
    protected override async Task OnParametersSetAsync()
    {
        DirectoryInfo dir = new(DirectoryUri.FromEncodedUri(DirectoryInfo));

        var files = dir.GetFiles();
        if (files.Any())
        {
            files.Select(s => new TablePreviewDTO()
                {
                    FileIdentity = s.FullName,
                    FileName = s.Name,
                    FileSize = s.Length
                }).ToList().ForEach(f => _dataSource.Add(f));
        }

    }

}