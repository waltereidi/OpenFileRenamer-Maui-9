@namespace Presentation.Maui.Components.Pages

@page "/DataPreview"
@using Presentation.Maui.Components.PreviewOptions

<div class="form-group">
    <label >Rename Preview</label>
    <select class="form-control" @onchange="PreviewOptionChanged">
        <option value="0">NumberedSequence</option>
        <option value="1">Append</option>
        <option value="2">Pattern</option>
    </select>
</div>

@switch(PreviewOption)
{
    case 0 : <NumberedSequencePreviewer></NumberedSequencePreviewer>;break;
    case 1 : <AppendPreviewer></AppendPreviewer>; break;
    case 2 : <PatternPreviewer></PatternPreviewer>; break;
}



@code {

    private int PreviewOption { get; set; }
    private void PreviewOptionChanged(ChangeEventArgs e)
        =>PreviewOption = int.Parse(e.Value.ToString());
}
